@model List<Product>?

<div class="container-fluid p-0">
  <div class="row mt-0">
    <div class="col-sm-12 p-0">
      @{
        await Html.RenderPartialAsync("/Views/Partials/CarouselPartial.cshtml");
      }
    </div>
  </div>
  <section id="catalog">
    <div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-5 g-1 g-sm-2 mt-3 px-1 px-md-3">
      @foreach (Product p in Model!)
      {
        <div class="col">
          <a href="@Url.ActionLink("Product","Home",new {id = p.id})" class="">
            <div class="card h-100 pb-0" style="justify-content: center;align-items: center;overflow: hidden;">
              <img src="@p.imageUrl" class="card-img" alt="@p.name">
              <div class="card-body">
                <h5 class="card-title text-center">@p.name</h5>
                <p class="card-text fa-sm text-end">
                  @p.maxPrice <i class="fa fa-rub opacity-100" style="color:white;"></i>
                </p>
              </div>
            </div>
          </a>
        </div>
      }
    </div>
  </section>
</div>

<div class="side-toggler">
  <div class="btn-anim">
    <a class="btn btn-main" href="#catalog">КАТАЛОГ</a>
  </div>
</div>

