@using static yakutsa.Services.RetailCRM
@model CreateOrderObject
<div class="container">
  <div class="row pt-5">
    <div class="col-sm-12">
      <h1 class="text-center">@ViewData["Title"]</h1>
    </div>
  </div>

  @using (Html.BeginForm(actionName: "OrderOptions", controllerName: "Home", FormMethod.Post))
  {
    <div class="row">
      <div class="col-sm-12 col-md-6 my-1">
        @Html.TextBoxFor(m => m.firstName,null, new {@class="form-control", placeholder="Имя", required=true})
      </div>
      <div class="col-sm-12 col-md-6 my-1">
        @Html.TextBoxFor(m => m.lastName,null, new {@class="form-control", placeholder="Фамилия", required=true})
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-6 my-1">
        @Html.TextBoxFor(m => m.email,null, new {@class="form-control", placeholder="Ел. почта", required=true})
      </div>
      <div class="col-sm-12 col-md-6 my-1">
        @Html.TextBoxFor(m => m.phone,null, new {@class="form-control", placeholder="Телефон", required=true})
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-6 my-1">

        @{
          var paymentTypes = new List<SelectListItem>() { new SelectListItem { Selected = true, Text = "Способ оплаты" } };
          foreach (var item in (PaymentType[])ViewBag.PaymentTypes)
          {
            paymentTypes.Add(new SelectListItem { Value = item.code, Text = item.name });
          }
        }

        @Html.ListBoxFor(m=> m.paymentType, paymentTypes, new { @class="form-select"})

        @*  <select id="inputState" class="form-select">
          <option selected>Способ оплаты</option>
          @foreach (DeliveryType item in ViewBag.DeliveryTypes)
          {
          <option>@item.name</option>
          }
          </select>*@
      </div>
      <div class="col-sm-12 col-md-6 my-1">
        @{
          var deliveryTypes = new List<SelectListItem>() { new SelectListItem { Selected = true, Text = "Способ доставки" } };
          foreach (var item in (DeliveryType[])ViewBag.DeliveryTypes)
          {
            deliveryTypes.Add(new SelectListItem { Value = item.code, Text = item.name });
          }
        }

        @Html.ListBoxFor(m=> m.deliveryType, deliveryTypes, new { @class="form-select"})

        @*  <select id="inputState" class="form-select">
          <option selected>Способ доставки</option>
          @foreach (DeliveryType item in ViewBag.DeliveryTypes)
          {
          <option>@item.name</option>
          }
          </select>*@
      </div>
    </div>
    @* <div class="row my-1">
      <div class="col">
      @Html.TextBoxFor(m => m.address,null, new {@class="form-control", placeholder="Ел. почта", required=true})
      </div>
      <div class="col">
      @Html.TextBoxFor(m => m.phone,null, new {@class="form-control", placeholder="Телефон", required=true})
      </div>
      </div>*@

    <div class="btn-anim my-1 d-block mx-auto">
      <input type="submit" class="btn btn-main" value="далее" />
    </div>
  }

</div>

