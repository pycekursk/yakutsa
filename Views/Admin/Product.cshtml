@model Product

<div class="row">
  <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<div class="container p-0">
  <div class="row">
    <div class="col-sm-12">
      @using (Html.BeginForm("Product", "Admin", FormMethod.Post, new { onsubmit = "((evt) => { sendAjaxForm(evt.target, '/Admin/Product/', (response)=>{ if(response.Success) location.reload();}, true); evt.preventDefault();})(event)" }))
      {
        @Html.HiddenFor(e => e.id)
        @Html.HiddenFor(e => e.createdAt)
        @Html.HiddenFor(e => e.updatedAt)

        foreach (ProductGroup? productGroup in Model?.groups!)
        {
          @Html.Hidden("groups", productGroup.id, new {id =""})
        }

        <div class="form-group">
          @Html.CheckBoxFor( p => p.active)
          @Html.LabelFor( p => p.active, new { @class= "ml-1", @for="active" })
        </div>
        <div class="form-group">
          @Html.TextAreaFor(p => p.description, new {@class="form-control", rows=7})
        </div>
        <div class="form-group">
          <input type="submit" value="сохранить" class="form-control" />
        </div>
      }
    </div>
  </div>
</div>