<div id="signin_modal" class="modal fade" role="dialog" tabindex="-1">
  <div class="modal-dialog modal-md" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div>
          <form method="post" action="@Url.ActionLink("SignIn","Home")">
            <h2 class="sr-only">Авторизация</h2>
            <div class="d-flex d-md-flex d-xl-flex justify-content-center justify-content-md-center justify-content-xl-center illustration">
              <img class="d-flex d-xl-flex mb-3" src="~/img/logo.png" />
            </div>
            <div class="input-group">
              <div class="labelholder">
                <input required class="form-control" type="text" name="login" placeholder="Email" />
              </div>
              <div class="labelholder">
                <input required class="form-control" type="password" name="password" placeholder="Пароль" />
              </div>
            </div>
            <div class="input-group mt-2" style="justify-content:space-between">
              <div class="btn-anim" style="flex: 0 0 49%;">
                <button class="btn btn-primary w-100" type="submit">ВОЙТИ</button>
              </div>

              <div class="btn-anim" style="flex: 0 0 49%;">
                <div class="btn btn-primary w-100" data-bs-target="#signin_modal" data-bs-toggle="modal">ЗАКРЫТЬ</div>
              </div>



            </div>
            @*  <div class="form-buttons">
              <a class="text-white-50 d-block fa-2x text-center" href=@Url.Action("Registration", "Account")>Регистрация</a>
              <a class="text-white-50 d-block fa-2x text-center" href=@Url.Action("ResetPassword", "Account")>Восстановление пароля</a>
              </div>*@
          </form>
        </div>
      </div>
    </div>
  </div>
</div>